---
const { title = 'ویکی انیمه', description = 'کاتالوگ انیمه‌ها و کاراکترها', pageTitle } = Astro.props;
import '../styles/global.css';
---
<!doctype html>
<html lang="fa" dir="rtl">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{pageTitle ? `${pageTitle} • Anime Wiki` : title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
		<footer class="footer">Built with Astro • Deploy to GitHub Pages</footer>
	</body>
</html>
